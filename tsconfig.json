    "outDir": "./public/js/",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "assets/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "src",
    "tests",
    "public"
  ]
}